<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:SteveCadwallader.CodeMaid.Properties"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.UI.Dialogs.Options.Sorting">
    <DataTemplate DataType="{x:Type local:SortingViewModel}">
        <StackPanel>
            <CheckBox Content="{x:Static p:Resources.UseAlphanumericSortingInAllSortOperations }" IsChecked="{Binding AlphanumericSorting}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>